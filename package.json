{
   "name": "capcut-automation",
   "private": true,
   "version": "0.0.0",
   "type": "module",
   "main": "dist-electron/main.js",
   "scripts": {
      "dev": "npm-run-all --parallel dev:react dev:electron",
      "dev:react": "vite",
      "dev:electron": "npm run ts:electron; cross-env NODE_ENV=development electron .",
      "build": "tsc -b && vite build",
      "lint": "eslint .",
      "preview": "vite preview",
      "ts:electron": "tsc --project src/electron/tsconfig.json",
      "dist:mac": "npm run ts:electron && npm run build && electron-builder --mac --arm64",
      "dist:win": "npm run ts:electron && npm run build && electron-builder --win --x64",
      "dist:linux": "npm run ts:electron && npm run build && electron-builder --linux --x64"
   },
   "dependencies": {
      "@mantine/core": "^7.17.4",
      "@mantine/dates": "^7.17.4",
      "@mantine/hooks": "^7.17.4",
      "@reduxjs/toolkit": "^2.7.0",
      "@tabler/icons-react": "^3.31.0",
      "@tanstack/react-query": "^5.74.4",
      "react": "^19.0.0",
      "react-dom": "^19.0.0",
      "react-redux": "^9.2.0",
      "react-router-dom": "^7.5.1",
      "react-toastify": "^11.0.5"
   },
   "devDependencies": {
      "@eslint/js": "^9.22.0",
      "@types/react": "^19.0.10",
      "@types/react-dom": "^19.0.4",
      "@vitejs/plugin-react": "^4.3.4",
      "cross-env": "^7.0.3",
      "electron": "^35.1.5",
      "electron-builder": "^26.0.12",
      "eslint": "^9.22.0",
      "eslint-plugin-react-hooks": "^5.2.0",
      "eslint-plugin-react-refresh": "^0.4.19",
      "globals": "^16.0.0",
      "npm-run-all": "^4.1.5",
      "postcss": "^8.5.3",
      "postcss-preset-mantine": "^1.17.0",
      "postcss-simple-vars": "^7.0.1",
      "typescript": "~5.7.2",
      "typescript-eslint": "^8.26.1",
      "vite": "^6.3.1"
   }
}
